<!DOCTYPE html>
<html lang="en">
  <% const ejs = true; %>
  <% include ../partials/head %>
  <body>
    <div id="dvt">
      <% include ../partials/navigation %>
        <div class="container landing-content">
          <div class="jumbotron d-flex">
            <div class="row w-100 align-self-center form-area">
            <div class="col-12">
              <h1 class="display-4">Sign Up</h1>
              <% if (messages.error) { %>
                <p class="alert alert-danger" role="alert"><%= messages.error %></p>
              <% } %>
                <form role="form" action"/signup" method="post">
                  <div class="form-group">
                    <label>First Name</label>
                    <input
                      required
                      name="firstName"
                      class="form-control"
                    />
                  </div>
                  <div class="form-group">
                    <label>Last Name</label>
                    <input
                      required
                      name="lastName"
                      class="form-control"
                    />
                  </div>
                  <div class="form-group">
                    <label>Email</label>
                    <input
                      required
                      name="email"
                      type="email"
                      class="form-control"
                    />
                  </div>
                  <div class="form-group">
                    <label>Password</label>
                    <input
                      required
                      name="password"
                      type="password" 
                      pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
                      title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters"
                      class="form-control"
                    />
                  </div>
                <button class="btn btn-success btn-block mt-5" type="submit">Sign Up</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
      <% include ../partials/footer %>
  </body>
</html>