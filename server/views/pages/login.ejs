<!DOCTYPE html>
<html lang="en">
<% const ejs = true; %>
<% include ../partials/head %>
  <style>
    @media screen and (max-width: 768px) {
      .size {
        display: none;
      }
    }
  </style>

  <body>
    <div id="dvt">
      <% include ../partials/navigation %>
        <div class="container landing-content">
          <div class="jumbotron d-flex">
            <div class="row w-100 align-self-center form-area">
              <div class="col-12">
                <h1 class="display-4">Log In</h1>
                <% if (messages.error == 'Failed to create token.') { %>
                  <p class="alert alert-danger" role="alert">Email or password is invalid.</p>
                  <% } else if (messages.error) { %>
                  <p class="alert alert-danger" role="alert">
                    <%= messages.error %>
                  </p>
                  <% } %>
                  <form role="form" action="/auth/local" method="post">
                    <div class="form-group">
                      <label>Email</label>
                      <input required name="email" type="email" class="form-control" />
                    </div>
                    <div class="form-group">
                      <label>Password</label>
                      <input required name="password" type="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters"
                        class="form-control" />
                    </div>
                    <div class="container">
                      <div class="row mt-5">
                        <div class="col-6">
                          <button class="btn btn-primary btn-block" type="submit"  >Log In</button>
                        </div>
                        <!-- <div class="col-4">
                          <a class="btn btn-dark btn-block" role="button" href="/auth/github">
                            <i class="fab fa-github-square"></i>
                            <span class='size'>Sign in with </span>Github
                          </a>
                        </div> -->
                      </div>
                    </div>
                  </form>
              </div>
            </div>
          </div>
        </div>
    </div>
    <% include ../partials/footer %>
  </body>

</html>